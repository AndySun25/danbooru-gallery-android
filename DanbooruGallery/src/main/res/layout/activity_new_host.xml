<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw.idv.palatis.danboorugallery.NewHostActivity"
    tools:ignore="MergeRootFrame"
    android:measureWithLargestChild="false">

    <LinearLayout
        android:id="@+id/dialog_new_host_panel_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="54dip"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true">

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dip"
            android:paddingStart="2dip"
            android:paddingEnd="2dip"
            android:measureWithLargestChild="true">
            <Button android:id="@+id/dialog_new_host_button_cancel"
                android:text="@android:string/cancel"
                android:layout_width="0dip"
                android:layout_weight="1"
                style="?android:attr/buttonBarButtonStyle"
                android:maxLines="2"
                android:layout_height="wrap_content" />
            <Button android:id="@+id/dialog_new_host_button_save"
                android:text="@android:string/ok"
                android:layout_width="0dip"
                android:layout_weight="1"
                style="?android:attr/buttonBarButtonStyle"
                android:maxLines="2"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/new_host_inputs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/dialog_new_host_panel_buttons"
        android:layout_alignParentTop="true" />
</RelativeLayout>
