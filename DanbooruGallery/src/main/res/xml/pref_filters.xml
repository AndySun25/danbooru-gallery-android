<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Image Resolution">
        <tw.idv.palatis.danboorugallery.preference.IntListPreference
            android:key="pref_filter_width"
            android:title="@string/pref_title_filter_width"
            android:defaultValue="0"
            android:entries="@array/pref_filter_width_height_titles"
            android:entryValues="@array/pref_filter_width_height_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />
        <tw.idv.palatis.danboorugallery.preference.IntListPreference
            android:key="pref_filter_height"
            android:title="@string/pref_title_filter_height"
            android:defaultValue="0"
            android:entries="@array/pref_filter_width_height_titles"
            android:entryValues="@array/pref_filter_width_height_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_rating">
        <CheckBoxPreference
            android:key="pref_filter_rating_safe"
            android:title="@string/pref_title_filter_rating_safe"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="pref_filter_rating_questionable"
            android:title="@string/pref_title_filter_rating_questionable"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="pref_filter_rating_explicit"
            android:title="@string/pref_title_filter_rating_explicit"
            android:defaultValue="false" />
    </PreferenceCategory>

</PreferenceScreen>