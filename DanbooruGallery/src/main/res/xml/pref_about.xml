<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="pref_copyright"
        android:selectable="true"
        android:title="@string/pref_title_copyright"
        android:summary="@string/pref_description_copyright">
        <intent android:action="android.intent.action.VIEW"
                android:data="@string/pref_description_copyright_mailto">
        </intent>
    </Preference>

    <Preference
        android:key="pref_translator"
        android:selectable="true"
        android:title="@string/pref_title_translator"
        android:summary="@string/pref_description_translator">
        <intent android:action="android.intent.action.VIEW"
                android:data="@string/pref_description_translator_mailto" />
    </Preference>

    <Preference
        android:key="pref_website"
        android:title="@string/pref_title_website"
        android:summary="@string/pref_description_website">
        <intent android:action="android.intent.action.VIEW"
                android:data="@string/pref_description_website_url" />
    </Preference>

    <Preference
        android:key="pref_version"
        android:selectable="false"
        android:title="@string/pref_title_version"
        android:summary="@string/pref_description_version" />

</PreferenceScreen>
